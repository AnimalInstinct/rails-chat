<div class="chat">
  <div class="chat__contacts col-4">
    <% @users.each do |user| %>
      <div class="chat__contact">
        <div class="chat__contact__avatar">
          <%= gravatar_for user, size: 50 %>
        </div>
        <div class="chat__contact__name">
          <span><%= user.username %></span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="chat__column-right col-8">
    <div id="chatMessages" class="chat__messages">
      <%= render @messages %>
    </div>
    <div class="chat__action">
      <%= form_for(@message, html: {id: "chatForm", class: "chat__action__form", role: "form"}, url: message_path, remote: true) do |f|%>
        <%= f.text_field :body, class: "chat__action__form__input", id: "chatInput" %>
        <%= f.button '<i class="i i-send"></i>'.html_safe, :class => 'chat__action__form__button', id: 'chatSendButton' %>
      <% end %>
    </div>
  </div>
</div>
