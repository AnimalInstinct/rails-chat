<%= form_with(model: @user, url: users_path) do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "form-label col-4" %>
    <%= f.text_field :username, class: "form-control col-8" %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "form-label col-4" %>
    <%= f.email_field :email, class: "form-control col-8"%>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "form-label col-4" %>
    <%= f.password_field :password, class: "form-control col-8" %>
  </div>
  <div class="form-group">
    <%= f.submit("Sign Up", class: "btn btn-blue btn-large") %>
  </div>
<% end %>
